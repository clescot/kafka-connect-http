<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.github.clescot</groupId>
        <artifactId>kafka-connect-http</artifactId>
        <version>0.2.70-SNAPSHOT</version>
    </parent>
    <artifactId>kafka-connect-http-archive</artifactId>
    <packaging>pom</packaging>
    <dependencies>
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.kafka</groupId>
            <artifactId>kafka-clients</artifactId>
            <version>7.3.1-ccs</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.14.2</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.debezium</groupId>
            <artifactId>debezium-testing-testcontainers</artifactId>
        </dependency>
        <dependency>
            <groupId>com.github.tomakehurst</groupId>
            <artifactId>wiremock-jre8</artifactId>
        </dependency>
        <dependency>
            <groupId>io.github.clescot</groupId>
            <artifactId>kafka-connect-http-core</artifactId>
            <version>0.2.70-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>3.5.0</version>
            <executions>
                <execution>
                    <phase>prepare-package</phase>
                    <goals>
                        <goal>copy-dependencies</goal>
                    </goals>
                    <configuration>
                        <outputDirectory>${project.build.directory}/lib</outputDirectory>
                    </configuration>
                </execution>
            </executions>
        </plugin>
        <plugin>
            <groupId>io.confluent</groupId>
            <artifactId>kafka-connect-maven-plugin</artifactId>
            <version>0.12.0</version>
            <executions>
                <execution>
                    <goals>
                        <goal>kafka-connect</goal>
                    </goals>
                    <configuration>
                        <title>Kafka Connect HTTP Sink and Source</title>
                        <documentationUrl>https://github.com/clescot/kafka-connect-http#readme</documentationUrl>
                        <description>The Http Sink connector permits from Kafka to interact with HTTP servers, and optionally the Source Connector permits to store in Kafka HTTP interactions details.</description>
                        <supportProviderName>Charles Lescot</supportProviderName>
                        <supportSummary>Support is provided as best effort only. Please register any issues in the github project.</supportSummary>
                        <supportUrl>https://github.com/clescot/kafka-connect-http/issues</supportUrl>
                        <sourceUrl>https://github.com/clescot/kafka-connect-http</sourceUrl>
                        <ownerUsername>clescot</ownerUsername>
                        <ownerType>user</ownerType>
                        <ownerName>Charles Lescot</ownerName>
                        <ownerUrl>https://github.com/clescot</ownerUrl>
                        <componentTypes>
                            <componentType>sink</componentType>
                            <componentType>source</componentType>
                        </componentTypes>
                        <tags>
                            <tag>http</tag>
                        </tags>
                    </configuration>
                </execution>
            </executions>
        </plugin>
        <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <version>3.3.0</version>
            <executions>
                <execution>
                    <id>attach-artifacts</id>
                    <phase>package</phase>
                    <goals>
                        <goal>attach-artifact</goal>
                    </goals>
                    <configuration>
                        <artifacts>
                            <artifact>
                                <file>${project.build.directory}/components/packages/clescot-${project.build.finalName}-${project.version}.zip</file>
                                <type>zip</type>
                            </artifact>
                        </artifacts>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>

</project>