{
  "$schema": "http://json-schema.org/draft/2019-09/schema#",
  "title": "Http Request",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "url": {
      "type": "string"
    },
    "headers": {
      "type": "object",
      "connect.type": "map",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "method": {
      "type": "string"
    },
    "bodyAsString":
    {
      "type": "string"
    }
  ,
    "bodyAsForm":
    {
      "type": "object",
      "connect.type": "map",
      "additionalProperties" : { "type": "string" }
    }
  ,
    "bodyAsByteArray":  {
      "type": "string"
    },
    "bodyAsMultipart": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "bodyType": {
      "type": "string",
      "enum": [
        "STRING",
        "FORM",
        "BYTE_ARRAY",
        "MULTIPART"
      ]
    }
  },
  "required": [
    "url",
    "method",
    "bodyType"
  ]
}