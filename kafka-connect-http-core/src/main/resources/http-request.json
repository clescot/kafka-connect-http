{
  "$id": "https://github.com/clescot/kafka-connect-http-sink/schemas/http-request.json",
  "$schema": "http://json-schema.org/draft/2019-09/schema",
  "title": "Http Request schema to drive HTTP Sink Connector",
  "description": "Http Request schema to drive HTTP Sink Connector. It supports 3 modes : classical body as string (bodyPart set to 'STRING'), a Map<String,String> mode to fill HTML form, a byte Array mode to transmit binary data((bodyPart set to 'BYTE_ARRAY'), and a multipart mode ((bodyPart set to 'MULTIPART')",
  "type": "object",
  "javaType" : "io.github.clescot.kafka.connect.http.core.core.HttpRequest",
  "additionalProperties": false,
  "required": ["url","method","bodyType"],
  "properties": {
    "url": {
      "type": "string"
    },
    "headers": {
      "type": "object",
      "existingJavaType" : "java.util.Map<String,java.util.List<String>>",
      "connect.type": "map",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "method": {
      "type": "string"
    },
    "bodyAsString":
    {
      "type": "string"
    }
  ,
    "bodyAsForm":
    {
      "type": "object",
      "connect.type": "map",
      "existingJavaType" : "java.util.Map<String,String>"
    }
  ,
    "bodyAsByteArray":  {
      "type": "string"
    },
    "bodyAsMultipart": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "bodyType": {
      "type": "string",
      "enum": [
        "STRING",
        "FORM",
        "BYTE_ARRAY",
        "MULTIPART"
      ]
    }
  },
  "required": [
    "url",
    "method",
    "bodyType"
  ]
}