{
  "$id": "https://github.com/clescot/kafka-connect-http-sink/schemas/http-response.json",
  "$schema": "http://json-schema.org/draft/2019-09/schema",
  "title": "Http Response schema.",
  "description": "Http Response schema, included into HttpExchange.",
  "type": "object",
  "javaType" : "io.github.clescot.kafka.connect.http.core.core.HttpResponse",
  "additionalProperties": false,
  "properties": {
    "statusCode":{
      "type": "integer"
    },
    "statusMessage":  {
      "type": "string"
    },
    "protocol":  {
      "type": "string"
    },
    "responseHeaders":  {
      "type": "object",
      "existingJavaType" : "java.util.Map<String,java.util.List<String>>",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "responseBody":  {
      "type": "string"
    }
  },
  "required": [
    "statusCode",
    "statusMessage"
  ]
}